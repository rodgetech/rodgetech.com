---
import "@fontsource/inter";
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <SEO
      title={title}
      description="Hi, I'm Luis. A full-stack developer from Belize, CA."
      openGraph={{
        basic: {
          type: "website",
          title,
          image:
            "https://raw.githubusercontent.com/rodgetech/rodgetech.com/main/public/me.jpeg",
        },
      }}
      twitter={{
        creator: "@rodgetech",
      }}
    />
  </head>
  <body class="bg-neutral-900">
    <Header />

    <slot />
    <style is:global>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </body>
</html>
